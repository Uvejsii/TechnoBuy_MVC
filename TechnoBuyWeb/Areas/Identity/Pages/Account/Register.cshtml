@page
@model RegisterModel

<div class="d-flex align-items-center justify-content-center min-vh-100 bg-light">
    <div class="card shadow-lg border-0 p-4" style="max-width: 600px; width: 100%; border-radius: 15px;">
        <div class="card-body">
            <h2 class="text-center mb-4 text-primary">Register</h2>
            <p class="text-center text-muted">Create a new account to enjoy all the features.</p>

            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-6 form-floating mb-3">
                        <input asp-for="Input.Name" class="form-control" aria-required="true" placeholder="John Doe" />
                        <label asp-for="Input.Name" class="ps-4">Name</label>
                        <span asp-validation-for="Input.Name" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 form-floating mb-3">
                        <input asp-for="Input.PhoneNumber" class="form-control" aria-required="true" placeholder="123-456-7890" />
                        <label asp-for="Input.PhoneNumber" class="ps-4">Phone Number</label>
                        <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 form-floating mb-3">
                        <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                        <label asp-for="Input.Password" class="ps-4">Password</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 form-floating mb-3">
                        <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="confirm password" />
                        <label asp-for="Input.ConfirmPassword" class="ps-4">Confirm Password</label>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 form-floating mb-3">
                        <input asp-for="Input.StreetAddress" class="form-control" aria-required="true" placeholder="123 Main St" />
                        <label asp-for="Input.StreetAddress" class="ps-4">Street Address</label>
                        <span asp-validation-for="Input.StreetAddress" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 form-floating mb-3">
                        <input asp-for="Input.City" class="form-control" aria-required="true" placeholder="City" />
                        <label asp-for="Input.City" class="ps-4">City</label>
                        <span asp-validation-for="Input.City" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 form-floating mb-3">
                        <input asp-for="Input.Country" class="form-control" aria-required="true" placeholder="Country" />
                        <label asp-for="Input.Country" class="ps-4">Country</label>
                        <span asp-validation-for="Input.Country" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 form-floating mb-3">
                        <select asp-for="Input.Role" asp-items="@Model.Input.RoleList" class="form-select">
                            <option disabled selected>-Select Role-</option>
                        </select>
                    </div>
                </div>

                <div class="text-center">
                    <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary py-2 rounded-pill">Register</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
