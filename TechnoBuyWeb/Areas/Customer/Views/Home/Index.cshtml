@model List<Product>

<div class="row pb-3">
    @foreach(var product in Model)
    {
        <div class="col-lg-3 col-sm-6">
            <div class="row p-2">
                <div class="col-12 p-1">
                    <div class="card border-0 p-3 shadow border-top border-5 rounded">
                        <img src="@product.ImageUrl" class="card-img-top rounded"  height="170px" style="object-fit:contain"/>
                        <div class="card-body pb-0">
                            <div class="ps-1">
                                <p class="card-title fw-bold text-dark opacity-75 text-uppercase text-center text-truncate">@product.Name</p>
                                <p class="card-title text-warning text-center">by <b>@product.Brand</b></p>
                            </div>
                            <div class="ps-1">
                                <p class="text-dark text-opacity-75 text-center mb-0">
                                    List Price: <span class="fw-bold">@product.Price.ToString("N2")</span>
                                </p>
                            </div>
                        </div>
                        <div>
                            <a asp-action="Detail"
                               asp-route-id="@product.Id" 
                               class="btn btn-primary w-100 mt-2">
                                Details
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>