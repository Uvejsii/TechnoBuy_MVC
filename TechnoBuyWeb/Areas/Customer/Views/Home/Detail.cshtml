@model Product

<form method="post">
    <div class="card shadow-lg border-0 my-5 rounded-3 overflow-hidden">
        <div class="card-header bg-primary bg-gradient text-light py-2 text-center">
            <h2 class="text-white text-uppercase fw-bold">@Model.Name</h2>
            <p class="text-white-50 fs-5 m-0">by @Model.Brand</p>
        </div>
        <div class="card-body p-5">
            <div class="row">
                <div class="col-12 text-start mb-4">
                    <a asp-action="Index" class="btn btn-outline-secondary text-uppercase fw-bold px-4 py-2">
                        <i class="bi bi-arrow-left me-2"></i> Back to Home
                    </a>
                </div>
                <div class="col-lg-4 text-center mb-4">
                    <img src="@Model.ImageUrl" class="img-fluid rounded shadow-sm border" alt="@Model.Name" style="max-height: 400px; object-fit: cover;" />
                </div>
                <div class="col-lg-7 offset-lg-1">
                    <span class="badge bg-info text-dark px-3 py-2 mb-3">Category: @Model.Category.Name</span>
                    <div class="mb-4">
                        <h4 class="fw-bold text-dark">Price:</h4>
                        <span class="fs-3 text-success fw-bold">@Model.Price.ToString("N2") $</span>
                    </div>
                    <div class="mb-4">
                        <p class="text-secondary">@Html.Raw(Model.Description)</p>
                    </div>
                    <div class="w-50">
                        <a asp-controller="Cart"
                           asp-action="AddToCart"
                           asp-route-id="@Model.Id"
                           class="btn btn-success btn-lg text-uppercase fw-bold py-3">
                            <i class="bi bi-cart-fill me-2"></i> Add to Cart
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
