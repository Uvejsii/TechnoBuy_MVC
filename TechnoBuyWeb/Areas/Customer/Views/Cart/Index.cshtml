@model List<CartItem>

<div class="container">
    <div class="d-flex justify-content-between">
        <h3>Your Added Items:</h3>
    </div>
    <div class="d-flex justify-content-between">
        <div class="d-flex flex-wrap w-50">
            @if (Model == null || !Model.Any())
            {
                <h1 class="text-center w-100">No Added Items</h1>
            }
            else
            {
                @foreach (var item in Model)
                {
                    <div class="border w-50 rounded-3 p-3 shadow">
                        <h4>Name: @item.Product.Name, Qty: @(item.Quantity)x, Price: @item.Product.Price.ToString("N2") $</h4>
                        <img src="@item.Product.ImageUrl" class="w-50" />
                        <div class="d-flex justify-content-between">
                            <a asp-controller="Cart"
                               asp-action="Remove"
                               asp-route-id="@item.Id"
                               class="btn btn-danger fw-bold w-50">
                                Remove <i class="bi bi-trash"></i>
                            </a>
                            <div>
                                @if (item.Quantity == 1)
                                {
                                    <a class="btn btn-warning fw-bold">
                                        -
                                    </a>
                                }
                                else
                                {
                                    <a asp-controller="Cart"
                                       asp-action="UpdateQty"
                                       asp-route-id="@item.Id"
                                       asp-route-change="-1"
                                       class="btn btn-warning fw-bold">
                                        -
                                    </a>
                                }
                                <span class="fw-bold">@item.Quantity</span>
                                <a asp-controller="Cart"
                                   asp-action="UpdateQty"
                                   asp-route-id="@item.Id"
                                   asp-route-change="+1"
                                   class="btn btn-success fw-bold">
                                    +
                                </a>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
        @if (Model != null && Model.Any())
        {
            <div class="border">
                <h5>Items in cart: @ViewBag.CartQty</h5>
                <h3>Total Amount: @ViewBag.TotalAmount.ToString("N2") $</h3>
                <hr />
                <form asp-controller="Cart" asp-action="MakeOrder" method="post">
                    @foreach (var item in Model)
                    {
                        <input type="hidden" name="orderItems[@Model.IndexOf(item)].ProductId" value="@item.ProductId" />
                        <input type="hidden" name="orderItems[@Model.IndexOf(item)].Quantity" value="@item.Quantity" />
                    }
                    <button type="submit" class="btn btn-primary w-100 fw-bold">Place Order</button>
                </form>
                <h5>Shipping to @Model.First().Cart.User.City will take 2 weeks</h5>
            </div>
        }
    </div>
</div>
